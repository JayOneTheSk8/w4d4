<% if flash[:errors] %>
<ul>
  <% flash[:errors].each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
<% end %>

<h3>New User</h3>

<a class="button" href="<%= new_session_url %>">Go to Sign-in</a>

<form action="<%= users_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token  %>">

  <p>
    <label class="sign_in_label" for="user_email">Email</label>
    <input id="user_email" type="email" name="user[email]" value="<%= @user.email %>">
  </p>

  <br><br>

  <p>
    <label class="sign_in_label" for="user_password">Password</label>
    <input id="user_password" type="password" name="user[password]" value="">
  </p>

  <br>

  <input class="button" type="submit" value="Submit">
</form>
